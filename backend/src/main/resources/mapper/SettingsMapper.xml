<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.umxinli.mapper.SettingsMapper">

    <resultMap id="settingsResultMap" type="com.umxinli.entity.GlobalSettings">
        <id column="id" property="id"/>
        <result column="key_name" property="keyName"/>
        <result column="value" property="value"/>
        <result column="description" property="description"/>
    </resultMap>

    <select id="selectByKey" parameterType="String" resultMap="settingsResultMap">
        SELECT * FROM global_settings WHERE key_name = #{keyName}
    </select>

    <select id="selectAll" resultMap="settingsResultMap">
        SELECT * FROM global_settings
    </select>

    <insert id="insert" parameterType="com.umxinli.entity.GlobalSettings">
        INSERT INTO global_settings (key_name, value, description)
        VALUES (#{keyName}, #{value}, #{description})
    </insert>

    <update id="updateByKey">
        UPDATE global_settings SET value = #{value} WHERE key_name = #{keyName}
    </update>

</mapper>
