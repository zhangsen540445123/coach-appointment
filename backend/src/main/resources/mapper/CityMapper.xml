<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.umxinli.mapper.CityMapper">

    <resultMap id="cityResultMap" type="com.umxinli.entity.City">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="province" property="province"/>
        <result column="value" property="value"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
    </resultMap>

    <select id="selectById" parameterType="Integer" resultMap="cityResultMap">
        SELECT * FROM city WHERE id = #{id}
    </select>

    <select id="selectAll" resultMap="cityResultMap">
        SELECT * FROM city ORDER BY province ASC, name ASC
    </select>

    <select id="selectByProvince" parameterType="String" resultMap="cityResultMap">
        SELECT * FROM city WHERE province = #{province} ORDER BY name ASC
    </select>

    <insert id="insert" parameterType="com.umxinli.entity.City">
        INSERT INTO city (name, province, value, created_at, updated_at)
        VALUES (#{name}, #{province}, #{value}, NOW(), NOW())
    </insert>

    <update id="update" parameterType="com.umxinli.entity.City">
        UPDATE city SET
            name = #{name},
            province = #{province},
            value = #{value},
            updated_at = NOW()
        WHERE id = #{id}
    </update>

    <delete id="delete" parameterType="Integer">
        DELETE FROM city WHERE id = #{id}
    </delete>
</mapper>
