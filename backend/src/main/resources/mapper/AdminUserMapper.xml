<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.umxinli.admin.mapper.AdminUserMapper">

    <resultMap id="AdminUserResultMap" type="com.umxinli.admin.entity.AdminUser">
        <id property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="realName" column="real_name"/>
        <result property="phone" column="phone"/>
        <result property="email" column="email"/>
        <result property="avatar" column="avatar"/>
        <result property="role" column="role"/>
        <result property="counselorId" column="counselor_id"/>
        <result property="status" column="status"/>
        <result property="lastLoginTime" column="last_login_time"/>
        <result property="lastLoginIp" column="last_login_ip"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <select id="selectById" resultMap="AdminUserResultMap">
        SELECT * FROM admin_user WHERE id = #{id}
    </select>

    <select id="selectByUsername" resultMap="AdminUserResultMap">
        SELECT * FROM admin_user WHERE username = #{username}
    </select>

    <select id="selectList" resultMap="AdminUserResultMap">
        SELECT * FROM admin_user
        <where>
            <if test="keyword != null and keyword != ''">
                AND (username LIKE CONCAT('%', #{keyword}, '%') OR real_name LIKE CONCAT('%', #{keyword}, '%'))
            </if>
            <if test="role != null">
                AND role = #{role}
            </if>
        </where>
        ORDER BY created_at DESC
        LIMIT #{offset}, #{limit}
    </select>

    <select id="count" resultType="int">
        SELECT COUNT(*) FROM admin_user
        <where>
            <if test="keyword != null and keyword != ''">
                AND (username LIKE CONCAT('%', #{keyword}, '%') OR real_name LIKE CONCAT('%', #{keyword}, '%'))
            </if>
            <if test="role != null">
                AND role = #{role}
            </if>
        </where>
    </select>

    <insert id="insert" parameterType="com.umxinli.admin.entity.AdminUser">
        INSERT INTO admin_user (id, username, password, real_name, phone, email, avatar, role, counselor_id, status, created_at, updated_at)
        VALUES (#{id}, #{username}, #{password}, #{realName}, #{phone}, #{email}, #{avatar}, #{role}, #{counselorId}, #{status}, #{createdAt}, #{updatedAt})
    </insert>

    <update id="update" parameterType="com.umxinli.admin.entity.AdminUser">
        UPDATE admin_user
        <set>
            <if test="password != null">password = #{password},</if>
            <if test="realName != null">real_name = #{realName},</if>
            <if test="phone != null">phone = #{phone},</if>
            <if test="email != null">email = #{email},</if>
            <if test="avatar != null">avatar = #{avatar},</if>
            <if test="role != null">role = #{role},</if>
            <if test="counselorId != null">counselor_id = #{counselorId},</if>
            <if test="status != null">status = #{status},</if>
            updated_at = NOW()
        </set>
        WHERE id = #{id}
    </update>

    <delete id="delete">
        DELETE FROM admin_user WHERE id = #{id}
    </delete>

    <update id="updateLastLogin">
        UPDATE admin_user SET last_login_time = NOW(), last_login_ip = #{lastLoginIp} WHERE id = #{id}
    </update>

</mapper>

