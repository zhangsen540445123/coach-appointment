<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.umxinli.mapper.PaymentRecordMapper">

    <resultMap id="BaseResultMap" type="com.umxinli.entity.PaymentRecord">
        <id column="id" property="id"/>
        <result column="order_id" property="orderId"/>
        <result column="order_no" property="orderNo"/>
        <result column="transaction_id" property="transactionId"/>
        <result column="out_trade_no" property="outTradeNo"/>
        <result column="amount" property="amount"/>
        <result column="status" property="status"/>
        <result column="pay_time" property="payTime"/>
        <result column="notify_data" property="notifyData"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, order_id, order_no, transaction_id, out_trade_no, amount, status, pay_time, notify_data, created_at, updated_at
    </sql>

    <select id="selectById" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM payment_record
        WHERE id = #{id}
    </select>

    <select id="selectByOrderId" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM payment_record
        WHERE order_id = #{orderId}
        ORDER BY id DESC
        LIMIT 1
    </select>

    <select id="selectByOutTradeNo" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM payment_record
        WHERE out_trade_no = #{outTradeNo}
    </select>

    <select id="selectByTransactionId" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM payment_record
        WHERE transaction_id = #{transactionId}
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO payment_record (order_id, order_no, transaction_id, out_trade_no, amount, status, pay_time, notify_data)
        VALUES (#{orderId}, #{orderNo}, #{transactionId}, #{outTradeNo}, #{amount}, #{status}, #{payTime}, #{notifyData})
    </insert>

    <update id="update">
        UPDATE payment_record
        <set>
            <if test="transactionId != null">transaction_id = #{transactionId},</if>
            <if test="status != null">status = #{status},</if>
            <if test="payTime != null">pay_time = #{payTime},</if>
            <if test="notifyData != null">notify_data = #{notifyData},</if>
        </set>
        WHERE id = #{id}
    </update>

    <update id="updateStatusByOrderId">
        UPDATE payment_record
        SET status = #{status}
        WHERE order_id = #{orderId}
    </update>

</mapper>

