/* pages/userList/consultGuide.wxss */

.consult-guide-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 40rpx;
}

/* Tab 栏 */
.tab-bar {
  display: flex;
  padding: 24rpx 32rpx;
  background-color: #fff;
}

.tab-item {
  padding: 16rpx 32rpx;
  margin-right: 24rpx;
  border-radius: 32rpx;
  font-size: 28rpx;
  color: #666;
  border: 2rpx solid #ccc;
  transition: all 0.3s;
}

.tab-item.active {
  color: #47c8c4;
  border-color: #47c8c4;
  background-color: rgba(71, 200, 196, 0.1);
}

/* 内容区域 */
.content-area {
  margin: 24rpx;
  padding: 32rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

/* 指南列表 */
.guide-list {
  padding: 0;
}

.guide-item {
  padding: 24rpx 0;
  border-bottom: 2rpx solid #f5f5f5;
}

.guide-item:last-child {
  border-bottom: none;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item-title {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

.item-arrow {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform 0.3s;
}

.item-arrow.expanded {
  transform: rotate(180deg);
}

.arrow-icon {
  font-size: 24rpx;
  color: #999;
}

.item-content {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s ease-out, padding 0.3s;
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
}

.item-content.show {
  max-height: 1000rpx;
  padding-top: 16rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 加载状态 */
.loading-state {
  text-align: center;
  padding: 40rpx;
  font-size: 28rpx;
  color: #999;
}
