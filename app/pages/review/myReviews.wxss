/* 我的评价页面样式 */
.my-reviews-page {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 20rpx;
}

/* 评价列表 */
.review-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

/* 教练信息 */
.counselor-info {
  display: flex;
  align-items: center;
}

.counselor-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  flex-shrink: 0;
}

.counselor-detail {
  flex: 1;
  margin-left: 20rpx;
}

.counselor-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

.consult-time {
  font-size: 24rpx;
  color: #999;
  margin-top: 6rpx;
}

.rating-stars {
  display: flex;
}

.star {
  font-size: 28rpx;
  color: #ddd;
  margin-left: 4rpx;
}

.star.active {
  color: #ff9500;
}

/* 评价内容 */
.review-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f5f5f5;
}

/* 评价图片 */
.review-images {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-top: 20rpx;
}

.review-images image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
}

/* 评价底部 */
.review-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f5f5f5;
}

.review-time {
  font-size: 24rpx;
  color: #999;
}

.review-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
}

.action-btn.delete {
  color: #ff4d4f;
  border: 1rpx solid #ff4d4f;
}

/* 加载状态 */
.loading-more,
.no-more {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 26rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  opacity: 0.5;
}

.empty-state text {
  color: #999;
  font-size: 28rpx;
  margin-top: 20rpx;
}

.empty-tip {
  font-size: 24rpx;
  color: #bbb;
  margin-top: 10rpx;
}

